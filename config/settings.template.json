{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/scripts/keyword-detector.mjs\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "node \"$HOME/.claude/scripts/skill-injector.mjs\"",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/scripts/session-start.mjs\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/scripts/todo-continuation.mjs\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
